x = input("Please enter a string: ")
upper = 0
lower = 0
special = 0
for y in x:
    if y.isupper():
        #add 1 to uppercase letters
        upper += 1
    elif y.islower():
        #add 1 to lowercase letter
        lower += 1
    else:
        special+=
print("Uppercase letters: ", upper, "lowercase letter: ", lower, "special character: ", special)